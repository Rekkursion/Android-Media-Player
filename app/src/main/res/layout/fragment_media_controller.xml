<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rly_media_controller"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaControllerFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_show_song_length"
            android:text="@string/str_song_length_default"
            android:textSize="@dimen/dim_controller_text_size"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/skb_media_play_bar"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>